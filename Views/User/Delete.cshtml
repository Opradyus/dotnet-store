@model AppUser
@{
    Layout = "_AdminLayout";
}
@* BELLİ ROLLERE SAHİP KULLANICILARIN SİLİNMESİNİ ZORLAŞTIRAN KISMI Atlama *@
<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-body text-center">
            <p>@Model.UserName isimli Kullanıcı'yı silmek istiyor musunuz ?</p>
            <form asp-controller="User" asp-action="DeleteConfirm" method="post">
                <input type="hidden" name="id" value="@Model.Id">
                    <button type="submit" class="btn btn-danger">Sil</button>
                <a asp-controller="User" asp-action="Index" class="btn btn-primary">İptal</a> </form>
            </div>
        </div>
        
    </div>
</div>