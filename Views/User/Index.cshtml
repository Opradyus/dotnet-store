@using Microsoft.AspNetCore.Identity;
@model IEnumerable<AppUser>
@{
    Layout = "_AdminLayout";
}

<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1 d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Kullanıcılar</h5>
                        <a asp-controller="User" asp-action="Create" class="btn btn-sm btn-primary">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="get">   
                        <div class="input-group mb-2">
                            <select name="role" class="form-select" asp-items="ViewBag.Roller">
                                        <option value="" selected>Hepsi</option>
                            </select>
                            <button class="btn btn-secondary" type="submit">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>
                        </div>
                        </form>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Id</th>
                                        <th>Ad Soyad</th>
                                        <th>E-Posta</th>
                                        <th style="width: 90px;"></th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @if (Model == null || !Model.Any())
                                    {
                                        <tr>
                                            <td colspan="4" class="text-center text-bg-dark">Bu role ait kullancı yok</td>
                                        </tr>
                                    }
                                    else
                                    {

                                    @foreach(var item in Model)
                                    {    
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.AdSoyad</td>
                                        <td>@item.Email</td>
                                        <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-pen-to-square"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>
                                      </td>
                                    </tr>
                                    }
                                    
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      