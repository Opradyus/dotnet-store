@model  List<Order>
@{
    Layout = "_AdminLayout";
}
<div class="row">
            <div class="col">
                <div class="card shadow">
                    <div class="card-header py-1">
                        <h5 class="card-title">Siparişler</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-secondary">
                                    <tr>
                                        <th>Sipariş Id</th>
                                        <th>Username</th>
                                        <th>Toplam</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th style="width: 40px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model.Count == 0)
                                        {
                                            <tr>
                                                <td colspan="8" class="text-danger text-center">Sipariş Yok</td>
                                            </tr>
                                        }
                                    else{
                                    @foreach(var order in Model)
                                    {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.Username</td>
                                        <td>@order.ToplamFiyat ₺</td>
                                        <td>@order.SiparisTarihi</td>
                                        <td>
                                            <span class="badge bg-success">Teslim Edildi</span>
                                        </td>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                                                <i class="fa-solid fa-right-long"></i>
                                            </a>
                                        </td>
                                    </tr>
                                      }
                                     }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>