@model  List<Order>

@section Bar{
            <section class="bg-primary p-3">
            <div class="container">
                <nav>
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        <li class="breadcrumb-item">
                            Siparişi Tamamla
                        </li>
                    </ol>
                </nav>
            </div>
        </section>
}

<section class="mt-3">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h6 mb-0">Sipariş Detay</h2>
                    </div>
                    <div class="card-body">
                        <form action="" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="AdSoyad" class="form-label"></label>
                                <input asp-for="AdSoyad" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Sehir" class="form-label"></label>
                                <input asp-for="Sehir" class="form-control">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="Sehir" class="form-label"></label>
                                <input asp-for="Sehir" class="form-control">
                            </div>
                        </div>
                        
                            <div class="col">
                                <label asp-for="Telefon" class="form-label"></label>
                                <input asp-for="Telefon" class="form-control">
                            </div>
                        
                        
                            <div class="col">
                                <label asp-for="PostaKodu" class="form-label"></label>
                                <input asp-for="PostaKodu" class="form-control">
                            </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="AdresSatiri" class="form-label"></label>
                                <textarea asp-for="AdresSatiri" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label asp-for="SiparisNotu" class="form-label"></label>
                                <textarea asp-for="SiparisNotu" class="form-control" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-lg">Alışverişe Devam Et</a>
                            <button type="submit" asp-controller="Order" asp-action="CheckOut" class="btn btn-danger btn-lg">Siparişi Tamamla</button>
                        </div>
                    </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2 class="h6 mb-0">Sipariş Özeti</h2>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            @foreach(var item in ViewBag.Cart.CartItems)
                            {
                                <div class="d-flex justify-content-between align-items-center list-group-item">
                                    <p class="mb-0">@item.Urun.UrunAdi (x @item.Miktar)</p>
                                    <span>(@item.Urun.Fiyat*@item.Miktar) ₺</span>
                                </div>
                            }
                            <div class="d-flex justify-content-between align-items-center list-group-item ">
                                    <p class="mb-0">Ara Toplam</p>
                                    <span>@ViewBag.Cart.AraToplam() ₺</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center list-group-item text-danger">
                                    <p class="mb-0">Toplam(+Vergi)</p>
                                    <span class="fs-5">@ViewBag.Cart.Toplam() ₺</span>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>

