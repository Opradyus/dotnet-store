@model IEnumerable<string>

<section class="top-bar">
    <div class="container">
        <div class="row gy-2 align-items-center">
            <div class="col-lg-2 col-sm-4 col-4">
                <a asp-action="Index" asp-controller="Home" class="navbar-brand"><i class="fa-solid fa-truck-fast"></i>Tarımİstan</a>
            </div>

            <div class="col-lg-5 col-sm-8 col-8 order-lg-last">
                <div class="text-end">

                    @if(User.Identity?.IsAuthenticated == true)
                    {
                        @if (Model.Contains("Admin"))
                        {
                            <a asp-controller="Admin" asp-action="Index" class="btn btn-dark">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Yönetim Paneli</span>
                            </a>
                        }
                        <a asp-controller="Account" asp-action="EditUser" class="btn btn-light">
                            <i class="fa fa-user"></i> <span class="ms-1 d-none d-sm-inline-block">Hesabım</span>
                        </a>
                        <a href="#" class="btn btn-light">
                            <i class="fa fa-heart"></i> <span class="ms-1 d-none d-sm-inline-block">Listem</span>
                        </a>
                        <a asp-controller="Account" asp-action="LogOut" class="btn btn-light">
                            <i class="fa-solid fa-right-to-bracket"></i> <span class="ms-1 d-none d-sm-inline-block">Çıkış Yap</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn btn-light">
                            <i class="fa-solid fa-right-to-bracket"></i> <span class="ms-1 d-none d-sm-inline-block">Giriş Yap</span>
                        </a>
                        <a asp-controller="Account" asp-action="Create" class="btn btn-light">
                            <i class="fa-heart fa-user-plus"></i> <span class="ms-1 d-none d-sm-inline-block">Üye Ol</span>
                        </a>

                    }
                    <a href="shopping-cart.html" class="btn btn-light">
                        <i class="fa fa-shopping-cart"></i> <span class="ms-1 d-none d-sm-inline-block">Sepetim</span>
                    </a>
                </div>
            </div>
            <div class="col-lg-5">
                <form asp-controller="urun" asp-action="list" method="get">
                    <div class="input-group">
                        <input name="q"  type="text" placeholder="Anahtar kelime" class="form-control" value="@ViewData["q"]">
                        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>